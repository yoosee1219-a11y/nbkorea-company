rules_version = '2';

// Firebase Storage Security Rules for NB KOREA
service firebase.storage {
  match /b/{bucket}/o {

    // Consultations file uploads
    match /consultations/{consultationId}/{fileName} {

      // Allow public uploads (for customer form submissions)
      // File size limited to 10MB
      // Allowed file types: images, PDFs, Word documents
      allow create: if request.resource.size <= 10 * 1024 * 1024  // 10MB max
                    && (request.resource.contentType.matches('image/.*')
                        || request.resource.contentType == 'application/pdf'
                        || request.resource.contentType == 'application/msword'
                        || request.resource.contentType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document');

      // Only authenticated users (admins) can read files
      allow read: if request.auth != null;

      // Only authenticated users (admins) can delete files
      allow delete: if request.auth != null;

      // Only authenticated users can update files
      allow update: if request.auth != null;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
